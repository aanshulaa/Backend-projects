      "source": [
        "def count_words(text):\n",
        "    words = text.split()\n",
        "    word_count = len(words)\n",
        "    return word_count\n",
        "\n",
        "input_text = input(\"Enter a sentence or paragraph: \")\n",
        "count = count_words(input_text)\n",
        "print(\"Word count:\", count)\n",
        "\n"
